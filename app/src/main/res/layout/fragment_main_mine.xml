<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBg"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fmm_rl_login"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="@drawable/bottom_border"
            android:padding="12dp">

            <ImageView
                android:id="@+id/fmm_head_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_image_headimg_border"
                android:src="@drawable/def_avatar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:layout_toRightOf="@id/fmm_head_img"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fmm_username_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="2.5dp"
                    android:text="请登录"
                    android:textColor="@color/colorText"
                    android:textSize="16dp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bottom_border"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="1dp">

            <RelativeLayout

                android:id="@+id/fmm_rl_coll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bottom_border"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/fmm_release_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/me_me_fabu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/fmm_release_img"
                    android:text="我的收藏"

                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_zhankai"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmm_rl_three"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bottom_border"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/fmm_participation_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/me_me_canyu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/fmm_participation_img"
                    android:text="我关注的领域"

                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_zhankai"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmm_rl_four"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bottom_border"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/fmm_attention_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/me_me_guanzhu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/fmm_attention_img"
                    android:text="myAttention"

                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_zhankai"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmm_rl_five"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bottom_border"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/fmm_invite_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/me_me_yaoqin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/fmm_invite_img"
                    android:text="myInvite"

                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_zhankai"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmm_rl_six"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bottom_border"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/fmm_apply_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/me_me_shengqin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/fmm_apply_img"
                    android:text="myApply"

                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_zhankai"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmm_rl_even"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bottom_border"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/fmm_drafts_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/me_me_caogao"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/fmm_drafts_img"
                    android:text="myDrafts"

                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_zhankai"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmm_rl_engit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/fmm_letter_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/me_me_toushu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/fmm_letter_img"
                    android:text="反馈"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_zhankai"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fmm_rl_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/top_bottom_border"
            android:paddingLeft="27dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/fmm_setting_img"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/me_shezhi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:layout_toRightOf="@id/fmm_setting_img"
                android:text="设置"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/login_zhankai"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
</ScrollView>